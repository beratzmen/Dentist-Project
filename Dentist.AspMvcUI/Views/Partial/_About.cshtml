@model Dentist.Entities.Dto.AboutViewModel
@{
    if (Model.aboutus == null)
    {
        Model.aboutus = new Dentist.Entities.Model.Global();
    }
    if (Model.employeeList == null)
    {
        Model.employeeList = new List<Dentist.Entities.Dto.EmployeeUIViewModel>();
    }
    if (Model.statistic == null)
    {
        Model.statistic = new Dentist.Entities.Model.Global();
    }

}

<!-- ****** About Us Area Start ******* -->
<section class="dento-about-us-area mt-70">
    <div class="container">
        <div class="row align-items-center">
            <!-- About Us Thumbnail -->
            <div class="col-12 col-md-6">
                <div class="about-us-thumbnail mb-50">
                    <img src="~/Content/image/bg-img/15.jpg" alt="">
                </div>
            </div>
            <!-- About Content -->
            <div class="col-12 col-md-6">
                <div class="about-us-content mb-50">
                    <!-- Section Heading -->
                    <div class="section-heading">
                        <h2>@Model.aboutus.Title</h2>
                        <div class="line"></div>
                    </div>
                    <p>
                        @Html.Raw(Model.aboutus.Description)
                    </p>

                    <!-- Single Skills Area -->
                    <div class="single-skills-area mt-30 col-md-12">
                        <h6>Uzmanlık</h6>
                        <div id="bar1" class="barfiller">
                            <span class="tip"></span>
                            <span class="fill" data-percentage="@Model.statistic.Experience"></span>
                        </div>
                    </div>

                    <!-- Single Skills Area -->
                    <div class="single-skills-area mt-30 col-md-12">
                        <h6>Modern Ekipman</h6>
                        <div id="bar2" class="barfiller">
                            <span class="tip"></span>
                            <span class="fill" data-percentage="@Model.statistic.ModernEquipment"></span>
                        </div>
                    </div>

                    <!-- Single Skills Area -->
                    <div class="single-skills-area mt-30 col-md-12">
                        <h6>Güler Yüzlü Personel</h6>
                        <div id="bar3" class="barfiller">
                            <span class="tip"></span>
                            <span class="fill" data-percentage="@Model.statistic.Sincerity"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ****** About Us Area End ****** -->

<div class="container">
    <div class="dento-border clearfix"></div>
</div>

<!-- Cool Facts Area Start -->
<section class="dento-cta-area">
    <div class="container">
        <div class="row">
            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_genius"></i>
                    <h2><span class="counter">@Model.statistic.Since</span></h2>
                    <h5>Yıl</h5>
                </div>
            </div>

            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_heart_alt"></i>
                    <h2><span class="counter">@Model.statistic.Patient</span>+</h2>
                    <h5>Mutlu Hasta</h5>
                </div>
            </div>

            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_book_alt"></i>
                    <h2><span class="counter">@Model.statistic.Certificate</span></h2>
                    <h5>Sertifika</h5>
                </div>
            </div>

            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_id"></i>
                    <h2><span class="counter">@Model.statistic.Doctor</span>+</h2>
                    <h5>Doktor</h5>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Cool Facts Area End -->