@model Dentist.Entities.Dto.HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Welcome, Model.Welcome.AreaType))
    {
        <!-- ***** Welcome Area Start ***** -->
        <section class="welcome-area">
            <!-- Welcome Slides -->
            <div class="welcome-slides owl-carousel">
                <!-- Single Welcome Slide -->
                <div class="welcome-welcome-slide bg-img bg-gradient-overlay jarallax" style="background-image: url(../../Content/image/bg-img/1.jpg);">
                    <div class="container h-100">
                        <div class="row h-100 align-items-center">
                            <div class="col-12">
                                <!-- Welcome Text -->
                                <div class="welcome-text text-center">
                                    <h2 data-animation="fadeInUp" data-delay="100ms">@Model.Welcome.Title</h2>
                                    <p data-animation="fadeInUp" data-delay="300ms">
                                        @Model.Welcome.Description
                                    </p>
                                    @*<div class="welcome-btn-group">
                                            <a href="#" class="btn dento-btn mx-2" data-animation="fadeInUp" data-delay="500ms">Get Started</a>
                                            <a href="#" class="btn dento-btn mx-2 active" data-animation="fadeInUp" data-delay="700ms">Contact Us</a>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
<!-- ***** Welcome Area End ***** -->

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.About, Model.Welcome.AreaType))
    {
        @Html.Partial("~/Views/Partial/_About.cshtml", Model.About)
    }
}


@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Service, Model.Welcome.AreaType))
    {
        <!-- Dento Service Area Start -->
        <section class="dento-service-area section-padding-100-0 bg-img bg-gradient-overlay jarallax clearfix" style="background-image: url('../../Content/image/bg-img/13.jpg');">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Service Content -->
                    <div class="col-12 col-lg-12">
                        <div class="service-content mb-30">
                            <!-- Section Heading -->
                            <div class="section-heading white">
                                <h2>Hizmetlerimiz</h2>
                                <div class="line"></div>
                            </div>
                            <div class="row">
                                @foreach (var service in Model.Service)
                                {
                                    <div class="col-4 col-md-4">
                                        <div class="single-service mb-70">
                                            @*<img src="~/Content/image/core-img/s1.png" alt="">*@
                                            <h6>@service.Title </h6>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </section>
        <!-- Dento Service Area End -->
    }
}

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Pricing, Model.Welcome.AreaType))
    {
        @Html.Partial("~/Views/Partial/_Pricing.cshtml", Model.Pricing, new ViewDataDictionary { { "isSeeAll", true } })
    }
}

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Appointment, Model.Welcome.AreaType))
    {

        <!-- Book An Oppointment Area Start -->
        <section class="book-an-oppointment-area section-padding-100 bg-img bg-gradient-overlay jarallax clearfix" style="background-image: url('../../Content/image/bg-img/12.jpg');">
            <div class="container">
                <div class="row">
                    <!-- Section Heading -->
                    <div class="col-12" id="appointmentForm">
                        <div class="section-heading text-center white">
                            <h2>Randevu Talebi Oluştur</h2>
                            <div class="line"></div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <!-- Appointment Form -->
                        <div class="appointment-form">
                            <form action="/Home/Add" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group mb-30">
                                            <input type="text" name="FullName" class="form-control" placeholder="İsim Soyisim" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group mb-30">
                                            <input type="text" name="Phone" class="form-control" placeholder="Telefon" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group mb-30">
                                            <input type="email" name="Email" class="form-control" placeholder="Email" required>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group mb-30">
                                            <textarea name="Message" class="form-control" placeholder="Lütfen isteklerinizi açıkça belirtiniz.Arkadaşlarımız çalışma saatlerimiz içerisinde sizinle iletişime geçecektir."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn dento-btn">Randevu Talebini Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Book An Oppointment Area End -->
    }
}

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Employee, Model.Welcome.AreaType))
    {
        @Html.Partial("~/Views/Partial/_Employee.cshtml", Model.Employee)
    }
}

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Client, Model.Welcome.AreaType))
    {
        @Html.Partial("~/Views/Partial/_Client.cshtml")
    }
}

@{
    if (Dentist.Business.Help.Util.FindEnumInString(Dentist.Entities.Enum.Database.AreaType.Article, Model.Welcome.AreaType))
    {
        @Html.Partial("~/Views/Partial/_ArticleMinimal.cshtml", Model.Article)
    }
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
@if (Convert.ToInt32(Session["alertSession"]) == 1)
{
    <script>
        swal("İşlem Başarılı", "Randevu Talebiniz Alındı En Kısa Sürede Dönüş Yapılacaktır,Teşekkürler", "success");
    </script>
    Session["alertSession"] = 0;
}
@if (Convert.ToInt32(Session["alertSession"]) == 2)
{
    <script>
        swal("İşlem Başarısız", "Randevu Alırken Bir Sorun Oluştu,Lütfen Daha Sonra Tekrar Deneyiniz", "error");
    </script>
    Session["alertSession"] = 0;
}