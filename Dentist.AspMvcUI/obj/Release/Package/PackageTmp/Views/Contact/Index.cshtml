<!-- ***** Contact Area Start ***** -->
<section class="dento-contact-area mt-50 mb-100">
    <div class="container">

        <div class="col-md-12 map_agile">
            <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyA0C1LPhGrh_jgCTNU0blCVCFfeJmRZCbo'></script>
            @*Here, I modify the key value to my API key, which is generated by Google Api, you can use yours.*@
            <div style='overflow:hidden;height:799.4px;width:100%;'>
                <div id='gmap_canvas' style='height:100%;width:100%;'></div>
                <style>
                    #gmap_canvas img {
                        max-width: none !important;
                        background: none !important;
                    }
                </style>
            </div>

            <a href='http://casinos-1.com'>Konumunda Hizmetinizdeyiz</a>
            <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=c55cd61f08514ba52d0b28d793953517c0185723'></script>
            <script type='text/javascript'>
                function init_map() {
                    var address = "@Model.Address"
                    var geocoder = new google.maps.Geocoder();
                    var latitude = 38.990032;//Set default value in case address is null.
                    var longitude = 35.646599;//Set default value in case address is null.
                    geocoder.geocode({ 'address': address }, function (results, status) {
                        if (status == google.maps.GeocoderStatus.OK) {
                            // do something with the geocoded result
                            latitude = results[0].geometry.location.lat();
                            longitude = results[0].geometry.location.lng();
                            var myOptions =
                            {
                                zoom: 12,
                                center: new google.maps.LatLng(latitude, longitude), mapTypeId: google.maps.MapTypeId.ROADMAP
                            };
                            map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);
                            marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(latitude, longitude) });
                            infowindow = new google.maps.InfoWindow({ content: '<strong>@Model.Address</strong>' });
                            google.maps.event.addListener(marker, 'click', function () {
                                infowindow.open(map, marker);
                            });
                            infowindow.open(map, marker);
                        }
                    });
                }
                google.maps.event.addDomListener(window, 'load', init_map);
            </script>
        </div>


        <div class="row">
            <!-- Contact Information -->
            <div class="col-12 col-md-4">
                <div class="contact-information">

                    <h5>Adres</h5>
                    <p>@Model.Address</p>

                    <h5>Telefon</h5>
                    <p>@Model.Phone</p>

                    <h5>Fax</h5>
                    <p>@Model.Fax</p>

                    <h5>Email</h5>
                    <p class="mb-0">@Model.Email</p>

                </div>
            </div>
            <!-- Contact Form -->
            <div class="col-12 col-md-8">
                <div class="contact-form">
                    <!-- Section Heading -->
                    <div class="section-heading">
                        <h2>İletişim Formu</h2>
                        <div class="line"></div>
                    </div>
                    <!-- Form -->
                    <form action="/Contact/Add" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" name="FullName" class="form-control mb-30" placeholder="İsim Soyisim" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" name="Email" class="form-control mb-30" placeholder="Email">
                            </div>
                            <div class="col-12">
                                <textarea name="Message" class="form-control mb-30" placeholder="Merak Ettiklerinizi Sorabilirsiniz" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn dento-btn">Gönder</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Contact Area End ***** -->
